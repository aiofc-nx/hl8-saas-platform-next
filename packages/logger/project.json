{
  "name": "logger",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/logger/src",
  "projectType": "library",
  "tags": [
    "scope:lib",
    "type:lib"
  ],
  "// targets": "to see all targets run: nx show project logger --web",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/packages/logger",
        "main": "packages/logger/src/index.ts",
        "tsConfig": "packages/logger/tsconfig.lib.json",
        "assets": [
          "packages/logger/*.md"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/logger/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/logger/**/*.ts"
        ]
      }
    }
  }
}